<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.electricdrewbaloogmail.pomodoroendofday.DisplayTotalActivity"
    tools:showIn="@layout/activity_display_total">

    <TextView
        android:id="@+id/total_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:text="" />

    <EditText
        android:id="@+id/cash_sales"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:text="Cash Sales: "
        android:layout_below="@+id/total_test"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/card_sales"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Card Sales:"
        android:layout_below="@+id/cash_sales"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/check_sales"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Check_Sales"
        android:layout_below="@+id/card_sales"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/auto_grat_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/check_sales"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="14"
        android:inputType="textPersonName"
        android:text="Auto Gratuity Total: "
        android:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/auto_grat_card"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:inputType="textPersonName"
        android:text="Auto Gratuity (Card): "
        android:layout_below="@+id/auto_grat_total_2" />

    <EditText
        android:id="@+id/auto_grat_cash"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:inputType="textPersonName"
        android:text="Auto Gratuity (Cash): "
        android:layout_below="@+id/auto_grat_card" />

    <EditText
        android:id="@+id/auto_grat_check"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:inputType="textPersonName"
        android:text="Auto Gratuity (Check): "
        android:layout_below="@id/auto_grat_cash" />

    <EditText
        android:id="@+id/cc_processing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/auto_grat_total"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="14"
        android:inputType="textPersonName"
        android:text="2.5% Processing Fee: "
        android:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/total_day"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:text="TOTAL: "
        android:layout_below="@+id/cc_processing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/dinners"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:lines="2"
        android:text="Number of Guests: \n"
        android:textAlignment="viewEnd"
        android:layout_below="@+id/total_day"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/check_sales"
        android:layout_toRightOf="@+id/check_sales"
        android:layout_alignLeft="@+id/auto_grat_tax"
        android:layout_alignStart="@+id/auto_grat_tax" />

    <EditText
        android:id="@+id/total_tips"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Total Tips: "
        android:textStyle="bold"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/cash_tips"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Cash Tips: "
        android:layout_below="@+id/total_tips"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/card_tips"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Card Tips: "
        android:layout_below="@+id/cash_tips"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/auto_grat_total_2"
        android:cursorVisible="false"
        android:clickable="false"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Auto Gratuity Total: "
        android:layout_below="@id/card_tips"
        android:layout_marginBottom="23dp" />

    <EditText
        android:id="@+id/auto_grat_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="9"
        android:inputType="textPersonName"
        android:text="Auto Grat Tax: "
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/auto_grat_card"
        android:layout_alignParentRight="true" />

</RelativeLayout>
